@{
    //Layout = "_Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Login - Listagem";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite o seu email">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" name="senha" value="" class="form-control" id="senha" placeholder="Digite a sua senha">
        @Html.ValidationMessage("senha")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@ViewBag.Mensagem